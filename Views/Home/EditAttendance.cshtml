@model AttendanceSystem.Models.Attendance
@{
    ViewData["Title"] = "Edit Attendance";
    var students = ViewBag.Students as List<AttendanceSystem.Models.Student>;
    var subjects = ViewBag.Subjects as List<AttendanceSystem.Models.Subject>;
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width:500px;">
        <div class="card-header bg-primary text-white text-center">
            <h4>Edit Attendance</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditAttendance" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">Student</label>
                    <select name="StudentId" class="form-select" required>
                        <option value="">Select Student</option>
                        @foreach (var s in students)
                        {
                            if (s.Id == Model.StudentId)
                            {
                                <option value="@s.Id" selected>@s.StudentName</option>
                            }
                            else
                            {
                                <option value="@s.Id">@s.StudentName</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <select name="SubjectId" class="form-select" required>
                        <option value="">Select Subject</option>
                        @foreach (var sub in subjects)
                        {
                            if (sub.Id == Model.SubjectId)
                            {
                                <option value="@sub.Id" selected>@sub.SubjectName</option>
                            }
                            else
                            {
                                <option value="@sub.Id">@sub.SubjectName</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input type="date" name="Date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Time In</label>
                    <input type="time" name="TimeIn" class="form-control" value="@Model.TimeIn.ToString(@"hh\:mm")" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Time Out</label>
                    <input type="time" name="TimeOut" class="form-control" value="@(Model.TimeOut?.ToString(@"hh\:mm") ?? "")" />
                    <small class="text-muted">Optional - Leave empty if not yet checked out</small>
                </div>

                @if (ViewData.ModelState["TimeOut"]?.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @ViewData.ModelState["TimeOut"].Errors[0].ErrorMessage
                    </div>
                }

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Update Attendance</button>
                    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .btn {
        font-weight: 600;
    }

    .form-select, .form-control {
        border-radius: 0.5rem;
    }
</style>