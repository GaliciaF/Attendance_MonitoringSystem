@{
	ViewData["Title"] = "Pending User Approvals";   
}

<h2>Pending User Approvals</h2>
<p>Welcome, @ViewBag.Username</p>

@if (ViewBag.PendingAdmins != null && ViewBag.PendingAdmins.Count > 0)
{
    <h3>Pending Admins</h3>
    <table class="table">
        <thead>
            <tr><th>Username</th><th>Actions</th></tr>
        </thead>
        <tbody>
            @foreach (var admin in ViewBag.PendingAdmins)
            {
                <tr>
                    <td>@admin.Username</td>
                    <td>
                        <form asp-action="ApproveAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@admin.Id" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-action="RejectAdmin" method="post" style="display:inline; margin-left: 10px;">
                            <input type="hidden" name="id" value="@admin.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this admin? This will delete their registration.')">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending admins.</p>
}

@if (ViewBag.PendingStudents != null && ViewBag.PendingStudents.Count > 0)
{
    <h3>Pending Students</h3>
    <table class="table">
        <thead>
            <tr><th>Student Name</th><th>Student No</th><th>Email</th><th>Actions</th></tr>
        </thead>
        <tbody>
            @foreach (var student in ViewBag.PendingStudents)
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>@student.StudentNo</td>
                    <td>@student.Email</td>
                    <td>
                        <form asp-action="ApproveStudent" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@student.Id" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-action="RejectStudent" method="post" style="display:inline; margin-left: 10px;">
                            <input type="hidden" name="id" value="@student.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this student? This will delete their registration.')">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending students.</p>
}

