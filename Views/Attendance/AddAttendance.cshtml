@model AttendanceSystem.Models.Attendance
@{
    ViewData["Title"] = "Record Attendance";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto p-4" style="max-width:500px; border-radius:15px; background: linear-gradient(to bottom right, #ffffff, #f1f8e9);">
        <h4 class="text-center text-success mb-4">🕒 Record Attendance</h4>

        <form asp-action="AddAttendance" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Student</label>
                <select asp-for="StudentId" class="form-select form-select-lg" required>
                    <option value="">Select Student</option>
                    @foreach (var s in ViewBag.Students)
                    {
                        <option value="@s.Id">@s.StudentName</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Subject</label>
                <select asp-for="SubjectId" class="form-select form-select-lg" required>
                    <option value="">Select Subject</option>
                    @foreach (var sub in ViewBag.Subjects)
                    {
                        <option value="@sub.Id">@sub.SubjectName</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 fw-bold">✅ Submit Attendance</button>
        </form>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <strong>Success!</strong> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<style>
    .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 8px rgba(25, 135, 84, 0.3);
    }

    .btn-success:hover {
        background-color: #198754;
        transform: scale(1.02);
        transition: 0.2s;
    }
</style>
