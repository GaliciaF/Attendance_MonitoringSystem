@{
    ViewData["Title"] = "Login";
}

<style>
    .split-login {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Left branding panel */
    .login-left {
        background: linear-gradient(135deg, rgba(26,83,92,0.9), rgba(78,205,196,0.9)), repeating-linear-gradient(45deg, rgba(255,255,255,0.05), rgba(255,255,255,0.05) 10px, transparent 10px, transparent 20px);
        color: #FFD87D; /* matches sidebar text color */
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        flex-direction: column;
        padding: 2rem;
        position: relative;
        overflow: hidden;
        border-right: 5px solid #2F8F9D; /* accent color */
        border-radius: 0.5rem 0 0 0.5rem;
        box-shadow: 2px 0 10px rgba(0,0,0,0.1); /* subtle separation */
    }

        .login-left h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #FFD87D; /* harmonized with sidebar */
            text-shadow: 1px 1px 4px rgba(0,0,0,0.25);
        }

        .login-left p {
            font-size: 1.3rem;
            margin-top: 1rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.15);
        }

        .login-left i {
            color: #FFD87D; /* matches sidebar text color */
            margin-top: 1.5rem;
            animation: float 3s ease-in-out infinite;
        }

    keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-12px);
    }

    }

    /* Right login form panel */
    .login-right {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        background: #f8f9fa; /* consistent with main layout */
    }

    .card-login {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 25px rgba(0,0,0,0.15);
        background: #ffffff;
        border-top: 5px solid #2F8F9D; /* accent color */
    }

    .btn-primary {
        background-color: #2F8F9D;
        border-color: #2F8F9D;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0F3D3E;
            border-color: #0F3D3E;
        }

    .text-primary {
        color: #2F8F9D !important;
    }

    .alert-danger {
        border-radius: 0.5rem;
        font-weight: 600;
    }
</style>

<div class="container-fluid split-login flex-grow-1 d-flex flex-column flex-lg-row p-0">
    <!-- Left side: branding -->
    <div class="login-left col-lg-6 col-12">
        <h1>Attendance System</h1>
        <p>Monitor and manage attendance seamlessly</p>
        <i class="fas fa-user-check fa-4x mt-4"></i>
    </div>

    <!-- Right side: login form -->
    <div class="login-right col-lg-6 col-12 d-flex flex-column justify-content-center">
        <div class="card-login">
            <div class="text-center mb-4">
                <i class="fas fa-sign-in-alt fa-3x text-primary mb-2"></i>
                <h3 class="fw-bold text-primary">Welcome Back!</h3>
                <p class="text-muted">Sign in to your account</p>
            </div>

            <form method="post" class="needs-validation" novalidate>
                <div class="form-floating mb-3">
                    <input type="text" name="username" class="form-control form-control-lg" id="username" placeholder="Username" required />
                    <label for="username"><i class="fas fa-user"></i> Username</label>
                    <div class="invalid-feedback">Please enter your username.</div>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" name="password" class="form-control form-control-lg" id="password" placeholder="Password" required maxlength="8" />
                    <label for="password"><i class="fas fa-lock"></i> Password</label>
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg fw-bold shadow-sm">
                    <i class="fas fa-key me-2"></i> Login
                </button>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }

                <div class="text-center mt-3">
                    <a asp-controller="Registration" asp-action="Index" class="text-decoration-none text-primary fw-semibold">
                        Don’t have an account? Register here
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap client-side validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
