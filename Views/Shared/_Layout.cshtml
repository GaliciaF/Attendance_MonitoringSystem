<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Monitoring System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                    Attendance System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Home")">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("AddAttendance", "Home")">Add Attendance</a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "Student")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("StudentDashboard", "Home")">My Attendance</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")))
                        {
                            var role = Context.Session.GetString("Role");
                            var displayName = role == "Admin"
                            ? $"👨‍🏫 {Context.Session.GetString("Username")}"
                            : $"🎓 {Context.Session.GetString("StudentName")}";

                            <li class="nav-item">
                                <span class="nav-link fw-bold text-light">@displayName</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light ms-2" href="@Url.Action("Logout", "Home")">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light" href="@Url.Action("Index", "Login")">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-4 shadow-sm">
        <small>&copy; 2025 Attendance Monitoring System</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
