<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Monitoring System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: linear-gradient(135deg, #1A535C, #4ECDC4); /* matches login page */
            color: #0F3D3E;
        }

        /* Sidebar */
        .sidebar {
            min-height: 100vh;
            background-color: #0B2A33;
            color: #FFD87D;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
            display: flex;
            flex-direction: column;
            transition: all 0.3s ease;
        }

            .sidebar .navbar-brand {
                color: #FFD87D !important;
                font-weight: 700;
            }

            .sidebar .nav-link {
                color: #FFD87D;
                font-weight: 600;
                padding: 0.75rem 1.25rem;
                display: block;
                transition: all 0.2s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #2F8F9D;
                    color: #ffffff;
                    border-radius: 0.5rem;
                }

        /* Main content */
        .main-content {
            margin-left: 220px;
            padding: 2rem;
            flex: 1; /* ensures footer pushed to bottom */
        }

        /* Footer */
        footer {
            background: linear-gradient(135deg, #1A535C, #4ECDC4); /* same as login bg */
            color: #FFD87D;
            text-align: center;
            padding: 1rem 0;
            margin-top: auto; /* pushes footer to bottom */
            box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
        }

        /* Sidebar responsive */
        @@media (max-width: 992px) {
            .sidebar

        {
            position: relative;
            width: 100%;
            min-height: auto;
        }

        .main-content {
            margin-left: 0;
        }

        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a class="navbar-brand px-3 mb-4" href="@Url.Action("Index")">
            Attendance System
        </a>

        <ul class="nav flex-column">
            @if (Context.Session.GetString("Role") == "Admin")
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewData["Title"].ToString() == "Dashboard" ? "active" : "")" href="@Url.Action("Dashboard", "Home")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["Title"].ToString() == "Attendance" ? "active" : "")" href="@Url.Action("Attendance", "Home")">Attendance</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["Title"].ToString() == "PendingUsers" ? "active" : "")" href="@Url.Action("PendingUsers", "Home")">Manage Pending Users</a>
                </li>

            }
            else if (Context.Session.GetString("Role") == "Student")
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewData["Title"].ToString() == "StudentDashboard" ? "active" : "")" href="@Url.Action("StudentDashboard", "Home")">My Attendance</a>
                </li>
            }

            <li class="nav-item mt-auto px-3">
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")))
                {
                    <span class="nav-link fw-bold">
                        @(Context.Session.GetString("Role") == "Admin"
                            ? $"👨‍🏫 {Context.Session.GetString("Username")}"
                            : $"🎓 {Context.Session.GetString("StudentName")}"
                            )
                    </span>
                }
            </li>
            <li class="nav-item px-3 mb-3">
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")))
                {
                    <a class="nav-link btn btn-outline-light w-100 text-center" href="@Url.Action("Logout", "Home")">Logout</a>
                }
                else
                {
                    <a class="nav-link btn btn-outline-light w-100 text-center" href="@Url.Action("Index", "Login")">Login</a>
                }
            </li>
        </ul>
    </div>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <small>&copy; 2025 Attendance Monitoring System</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
