@{
    ViewData["Title"] = "Registration Pending";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto p-5 text-center" style="max-width:600px; background: linear-gradient(to bottom right, #fff3cd, #ffffff);">
        <div class="mb-4">
            <i class="fas fa-hourglass-half fa-4x text-warning"></i>
        </div>
        <h3 class="text-warning mb-3">Registration Pending Approval</h3>
        <p class="lead">Thank you for registering!</p>
        <p class="text-muted">
            Your account has been successfully created and is currently <strong>pending admin approval</strong>.
            You will be able to log in once an administrator approves your registration.
        </p>
        <hr class="my-4" />
        <div class="mt-4">
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt"></i> Go to Login
            </a>
        </div>
    </div>
</div>

<style>
    .fa-hourglass-half {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }
</style>